<h3>List of All Authors</h3>
<table>
  <% @authors.each do |author| %>
    <tr>
      <td><%= link_to author.complete_name, author_path(author) %></td>
      <td><%= button_to 'Edit', edit_author_path(author), method: 'get'%></td>
      <td><%= button_to 'Remove', author_path(author), method: 'delete', data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</table>
<%= link_to "Add a New Author", new_author_path %>
<li><%= link_to 'Home', welcome_index_path, class: "header" %></li>