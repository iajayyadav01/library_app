<h3>Create an Author</h3>
<%= form_with model: @author do |form| %>
  <%= form.text_field :first_name, placeholder: "First Name" %>
  <%= form.text_field :last_name, placeholder: "Last Name" %>
  <%= form.date_select :date_of_birth, :start_year => 1950, :end_year => Time.now.year, placeholder: "Date of Birth" %>

  <%= form.submit %>
<% end %>